<p id="notice"><%= notice %></p>
<% if @user.avatar.attached? %>
  <p>
    <%= 
  image_tag @user.avatar.variant(resize: "300x300"), 
  :style => "border: 1px solid #ccc; border-radius: 3px;"
  %>
  </p>
<% end -%>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% if @user.avatar.attached? %>
  <p>
    <strong>Blob Path:</strong>
    <%= Rails.application.routes.url_helpers.rails_blob_path(@user.avatar, only_path: true)%>
    <%= url_for(@user.avatar) %>
    <%= rails_blob_path(@user.avatar, disposition: "attachment") %>
  </p>
<% end -%>
<p>
  <strong>Posts:</strong>
  <% @user.microposts.each do |post| %>
    <p>
      <%= link_to post.id, id: post.id, action: "show", controller: 'microposts' %>
      <%= post.content %>
    </p>
  <% end %>
</p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
